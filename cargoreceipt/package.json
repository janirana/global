{
  "name": "cargoreceipt",
  "version": "0.1.0",
  "description": "Global Logistics Receipt Generator - A desktop application for generating cargo receipts",
  "author": "Global Logistics",
  "private": true,
  "dependencies": {
    "@types/node": "^16.18.39",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "html2canvas": "^1.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "wait-on": "^8.0.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "npm run build && electron-builder",
    "pack": "electron-builder --dir"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.yourcompany.cargoreceipt",
    "productName": "CargoReceiptGenerator",
    "directories": {
      "output": "release"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "node_modules/**/*",
      "!node_modules/fsevents/**/*",
      "!node_modules/.cache/**/*",
      "!**/node_modules/**/fsevents/**/*"
    ],
    "win": {
      "target": "zip",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false
    },
    "nsis": false,
    "compression": "store",
    "npmRebuild": false
  }
}
